@page
@model pizzaria.Pages.Forms.CustomPizzaModel
@{
}
<div class="text-center container">
    <h1>Create Your Own Pizza</h1>
    <form method="post" class="mx-auto my-5 px-5 py-5 rounded-5 bg-light alert-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your Pizza a name..." />
        <br />
        <label><input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato Sauce" />Tomato Sauce</label>
        <br />
        <label><input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" />Cheese</label>
        <br />
        <label><input type="checkbox" asp-for="Pizza.Pepperoni" placeholder="Pepperoni" />Pepperoni</label>
        <br />
        <label><input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" />Mushroom</label>
        <br />
        <labal><input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna" />Tuna</labal>
        <br />
        <label><input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple" />Pineapple</label>
        <br />
        <label><input type="checkbox" asp-for="Pizza.Ham" placeholder="Ham" />Ham</label>
        <br />
        <label><input type="checkbox" asp-for="Pizza.Beef" placeholder="Beef" />Beef</label>
        <br />
        <button class="btn btn-primary mt-1" type="submit">Order my Pizza</button>
    </form>
</div>