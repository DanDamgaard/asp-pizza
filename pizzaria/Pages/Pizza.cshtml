@page
@model pizzaria.Pages.PizzaModel
@{
    
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">
            Our great selction of pizzas</h1>
        <h4>Chose one, or try our Pizza builder! then order and Dine!</h4>
        <h4>No need to give any of your details</h4>
        <h4>We already know everything</h4>
        <p class="smallText"><i>Only one pizza per order.</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-lg-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left">Create your own pizza</h3>
                            <p style="text-align: left;">Make your own with our pizza maker</p>
                            <a class="btn btn-primary" style="float: left;" asp-area="" asp-page="/Forms/CustomPizza">Try now!</a>
                        </div>
                    </div>
                </div>
            </div>
            @foreach(var pizza in Model.FakePizzaDb)
            {
                string imagePath = "~/images/Pizzas/"+ pizza.ImageTitle + ".png";

                <div class="col-4 mb-5">
                    
                    <a class="pizzaImg" asp-area="" asp-page="/Checkout/Checkout" asp-route-PizzaName="@pizza.PizzaName"
                   asp-route-PizzaPrice="@pizza.FinalPrice" asp-route-ImageTitle="@pizza.ImageTitle"><img src="@imagePath" class="w-100" asp-append-version="true" /></a>
                    <br />
                </div>
            }
            
        </div>
    </div>
</div>